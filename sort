#include <bits/stdc++.h>
using namespace std;
 
// Вспомогательная функция для замены двух элементов
void swap(int* a, int* b) // воид - функция котора ничего не возвращает. данная функция принимает на вход два указателя а и b.
{
    int t = *a;
    *a = *b;
    *b = t; //тут происходит помена местами
}
 
/* Эта функция принимает последний элемент в качестве опорного, помещает
элемент поворота в правильном положении в отсортированном
массив и размещает все меньшие (меньше, чем точка опоры)
слева от точки поворота и всех больших элементов справа
поворота */

int partition (int arr[], int low, int high) // данная функция принимает массив, два значения первое и последнее в массиве
{
    int pivot = arr[high]; // переменна приравненая к конечному элементу
    int i = (low - 1); //переменна к которой присвоили первое значение - 1
 
    for (int j = low; j <= high - 1; j++) // начало цикла фор, заводим переменную и выполняем цикл, пока j будет меньше или равно крайний -1 то выполняем
    {
        if (arr[j] < pivot) //сравнение j с саммым верхним элементом, если j меньше то меняем их местами и увличиваем на 1
        {
            i++; 
            swap(&arr[i], &arr[j]);
        }
    }
    swap(&arr[i + 1], &arr[high]); //меняем значения массива i+1 и верхнее значение
    return (i + 1);
}
 
/* Основная функция, реализующая QuickSort
arr[] --> Массив для сортировки,
low --> Начальный индекс,
high --> Конечный индекс */

void quickSort(int arr[], int low, int high) // принимает значения
{
    if (low < high) // если нижний меньше верхнего то мы заводим переменную pi
    {
        int pi = partition(arr, low, high); // заводим переменную и вызываем функцию передавая в неё значения массива
        
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}
 
void printArray(int arr[], int size)
{
    int i;
    for (i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;
}
 
int main()
{
    int arr[] = {10, 7, 8, 9, 1, 5};
    int n = sizeof(arr) / sizeof(arr[0]);
    quickSort(arr, 0, n - 1);
    cout << "Sorted array: \n";
    printArray(arr, n);
    return 0;
}
